<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MauiShop.Pages.MyPopup">

    <VerticalStackLayout Padding="10" Spacing="10" WidthRequest="300" Margin="10" VerticalOptions="Center">
        <Label Text="Add New" FontSize="20" HorizontalOptions="Center" />
        <Entry x:Name="NameEntry" Placeholder="Name Here"  />
        <Button Text="OK" x:Name="btn_ok" Clicked="btn_ok_Clicked" />
    </VerticalStackLayout>
</toolkit:Popup>


